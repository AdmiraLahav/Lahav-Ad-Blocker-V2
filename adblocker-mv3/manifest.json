{
  "manifest_version": 3,
  "name": "Minimal Ad Blocker (MV3)",
  "version": "1.0.0",
  "description": "Blocks common ad network requests (DNR) and hides cosmetic ad elements. Add custom rules in Options.",
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "base_rules",
        "enabled": true,
        "path": "rules_1.json"
      }
    ]
  },
  "action": {
    "default_title": "Ad Blocker",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ]
}